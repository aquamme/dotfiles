# i3 config file (v4)

exec --no-startup-id xsetroot -solid black
#exec --no-startup-id compton -b -i 0.9 -e 0.9 --backend=xr_glx_hybrid
exec --no-startup-id emacs --daemon
exec --no-startup-id wicd-gtk -t &

bindsym XF86AudioMute exec --no-startup-id amixer -q sset Master toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master 3%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master 3%-
bindsym XF86ScreenSaver exec "i3lock --color 1e0010 --show-failed-attempts --ignore-empty-password"

set_from_resource $font i3wm.font pango:DejaVu Sans Mono 10
font $font

bar {
    status_command i3status
    position top
}

set $mod Mod4
set $modmod Shift

floating_modifier $mod

bindsym $mod+Return       exec i3-sensible-terminal
bindsym $mod+backslash    exec emacsclient -c
bindsym $mod+space        exec --no-startup-id i3-dmenu-desktop

bindsym $mod+h            focus left
bindsym $mod+j            focus down
bindsym $mod+k            focus up
bindsym $mod+l            focus right
bindsym $mod+m            split h
bindsym $mod+n            split v
bindsym $mod+f            fullscreen toggle
bindsym $mod+s            layout stacking
bindsym $mod+w            layout tabbed
bindsym $mod+e            layout toggle split
bindsym $mod+o            layout toggle all
bindsym $mod+u            focus mode_toggle
bindsym $mod+r            mode "resize"
bindsym $mod+a            focus parent
bindsym $mod+d            focus child
bindsym $mod+y            scratchpad show
bindsym $mod+$modmod+y    move scratchpad
bindsym $mod+$modmod+h    move left
bindsym $mod+$modmod+j    move down
bindsym $mod+$modmod+k    move up
bindsym $mod+$modmod+l    move right
bindsym $mod+$modmod+u    floating toggle
bindsym $mod+$modmod+q    kill
bindsym $mod+$modmod+c    reload
bindsym $mod+$modmod+r    restart
bindsym $mod+$modmod+e    exec "i3-nagbar -t warning -m 'Exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+1            workspace 1
bindsym $mod+2            workspace 2
bindsym $mod+3            workspace 3
bindsym $mod+4            workspace 4
bindsym $mod+5            workspace 5
bindsym $mod+6            workspace 6
bindsym $mod+7            workspace 7
bindsym $mod+8            workspace 8
bindsym $mod+9            workspace 9
bindsym $mod+0            workspace 10
bindsym $mod+$modmod+1    move container to workspace 1
bindsym $mod+$modmod+2    move container to workspace 2
bindsym $mod+$modmod+3    move container to workspace 3
bindsym $mod+$modmod+4    move container to workspace 4
bindsym $mod+$modmod+5    move container to workspace 5
bindsym $mod+$modmod+6    move container to workspace 6
bindsym $mod+$modmod+7    move container to workspace 7
bindsym $mod+$modmod+8    move container to workspace 8
bindsym $mod+$modmod+9    move container to workspace 9
bindsym $mod+$modmod+0    move container to workspace 10

mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

